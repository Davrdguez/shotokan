---
// src/components/inicio/Contact.astro
const info = {
  phone: "983 27 26 32",
  phoneHref: "tel:+34983272632",
  whatsappHref: "https://wa.me/34983272632?text=Hola%20Shotokan%20Valladolid,%20quisiera%20reservar%20una%20clase%20de%20prueba.",
  address: "P.º de Zorrilla, 117, 47008 Valladolid",
  email: "info@shotokanluismendez.com",
  website: "https://shotokanluismendez.com",
  hours: "Apertura: 10:30 (Lunes)",
};
---

<section id="contacto" class="py-20 bg-bg border-t border-border/60">
  <div class="container grid md:grid-cols-2 gap-10 items-start">
    <!-- Columna izquierda: info -->
    <div class="max-w-md">
      <h2 class="text-3xl font-extrabold text-fg">Contáctanos</h2>
      <p class="mt-5 text-muted">
        Escríbenos para más información sobre nuestras clases y horarios o para reservar tu clase de prueba.
      </p>

      <ul class="mt-8 space-y-5 text-fg text-sm">
        <li class="flex items-start gap-3">
          <!-- Teléfono -->
          <svg class="mt-1 h-5 w-5 text-fg/80" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 5a2 2 0 012-2h1.6a2 2 0 011.9 1.37l.6 1.79a2 2 0 01-.5 2.08l-1 1a16 16 0 006.86 6.86l1-1a2 2 0 012.08-.5l1.79.6A2 2 0 0121 18.4V20a2 2 0 01-2 2h-1C9.82 22 2 14.18 2 5V5z" />
          </svg>
          <a href={info.phoneHref} class="hover:underline">{info.phone}</a>
        </li>

        <li class="flex items-start gap-3">
          <!-- Dirección -->
          <svg class="mt-1 h-5 w-5 text-fg/80" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 11a4 4 0 100-8 4 4 0 000 8z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M20 11c0 5-8 11-8 11S4 16 4 11a8 8 0 1116 0z" />
          </svg>
          {info.address}
        </li>

        <li class="flex items-start gap-3">
          <!-- Email -->
          <svg class="mt-1 h-5 w-5 text-fg/80" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 8l9 6 9-6M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <a href={`mailto:${info.email}`} class="hover:underline">{info.email}</a>
        </li>

        <li class="flex items-start gap-3">
          <!-- Web -->
          <svg class="mt-1 h-5 w-5 text-fg/80" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 4.5c-4.14 0-7.5 3.36-7.5 7.5s3.36 7.5 7.5 7.5 7.5-3.36 7.5-7.5-3.36-7.5-7.5-7.5zM2.5 12h19M12 2.5v19" />
          </svg>
          <a href={info.website} target="_blank" rel="noopener noreferrer" class="hover:underline">
            shotokanluismendez.com
          </a>
        </li>

        <li class="flex items-start gap-3">
          <!-- Horario -->
          <svg class="mt-1 h-5 w-5 text-fg/80" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 8v4l3 2m6-2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          {info.hours}
        </li>

        <!-- WhatsApp rápido -->
        <li>
          <a href={info.whatsappHref} target="_blank" rel="noopener" class="inline-flex items-center gap-2 text-sm text-fg hover:text-white">
            <svg class="h-5 w-5" viewBox="0 0 32 32" fill="currentColor" aria-hidden="true"><path d="M19.11 17.46c-.3-.15-1.76-.87-2.03-.97-.27-.1-.47-.15-.67.15-.2.3-.77.97-.95 1.17-.17.2-.35.22-.65.07-.3-.15-1.27-.47-2.42-1.5-.9-.8-1.5-1.78-1.68-2.08-.17-.3-.02-.46.13-.61.13-.13.3-.35.45-.52.15-.17.2-.3.3-.5.1-.2.05-.37-.02-.52-.07-.15-.67-1.62-.92-2.22-.24-.58-.49-.5-.67-.5-.17 0-.37-.02-.57-.02s-.52.07-.8.37c-.27.3-1.05 1.02-1.05 2.48 0 1.46 1.08 2.87 1.23 3.07.15.2 2.12 3.23 5.14 4.53.72.31 1.28.49 1.72.62.72.23 1.38.2 1.9.12.58-.09 1.76-.72 2.01-1.42.25-.7.25-1.29.17-1.42-.07-.13-.27-.2-.57-.35z"/><path d="M27.99 16.02c0-6.63-5.37-12-12-12s-12 5.37-12 12c0 2.12.56 4.12 1.54 5.84L4 28l6.31-1.66a11.96 11.96 0 005.68 1.45c6.63 0 12-5.37 12-12zm-12 10.35c-1.95 0-3.77-.57-5.3-1.55l-.38-.24-3.74.99.99-3.65-.25-.38a10.32 10.32 0 01-1.6-5.52c0-5.72 4.66-10.38 10.38-10.38 5.72 0 10.38 4.66 10.38 10.38 0 5.72-4.66 10.35-10.38 10.35z"/></svg>
            Contactar por WhatsApp
          </a>
        </li>
      </ul>
    </div>

    <!-- Formulario -->
    <form action="#" method="POST" class="space-y-4" novalidate>
      <input
        type="text"
        name="name"
        placeholder="Tu nombre"
        autocomplete="name"
        required
        class="w-full rounded-xl bg-transparent px-4 py-3 text-fg placeholder:text-muted border border-white/70 focus:border-white focus:ring-0 outline-none"
        aria-label="Nombre"
      />

      <input
        type="email"
        name="email"
        placeholder="Tu email"
        autocomplete="email"
        required
        class="w-full rounded-xl bg-transparent px-4 py-3 text-fg placeholder:text-muted border border-white/70 focus:border-white focus:ring-0 outline-none"
        aria-label="Email"
      />

      <input
        type="tel"
        name="phone"
        placeholder="Teléfono (opcional)"
        autocomplete="tel"
        pattern="[0-9+\s()-]*"
        class="w-full rounded-xl bg-transparent px-4 py-3 text-fg placeholder:text-muted border border-white/70 focus:border-white focus:ring-0 outline-none"
        aria-label="Teléfono"
      />

      <textarea
        name="message"
        rows="6"
        placeholder="Cuéntanos qué necesitas"
        required
        class="w-full rounded-xl bg-transparent px-4 py-3 text-fg placeholder:text-muted border border-white/70 focus:border-white focus:ring-0 outline-none"
        aria-label="Mensaje"
      ></textarea>

      <label class="flex items-start gap-3 text-xs text-muted">
        <input type="checkbox" required class="mt-1 accent-white" aria-label="Acepto la política de privacidad" />
        Acepto la <a href="/legal" class="underline hover:text-white">&nbsp;política de privacidad</a>.
      </label>

      <div class="flex flex-col sm:flex-row gap-3">
        <button
          type="submit"
          class="inline-flex items-center justify-center rounded-xl bg-fg px-6 py-3 text-sm font-semibold text-bg hover:opacity-90 transition"
        >
          Enviar mensaje
        </button>

        <a
          href={info.whatsappHref}
          target="_blank"
          rel="noopener"
          class="inline-flex items-center justify-center rounded-xl border border-white/70 px-6 py-3 text-sm font-semibold text-fg hover:bg-white/10 transition"
        >
          Escribir por WhatsApp
        </a>
      </div>
    </form>
  </div>
</section>
