---
import Layout from "../../layouts/Layout.astro";
const title = "Instalaciones - Shotokan Valladolid";
const description = "Conoce nuestras instalaciones en Valladolid";

// Galería: lista de imágenes cargadas desde constante
const photos: { src: string; alt: string }[] = [
  { src: "https://media.v2.siweb.es/uploaded_thumb_big/03306675df6bb004f83953b4f8ef82f7/gimnasio2_015.jpg", alt: "Recepción y entrada" },
  { src: "https://media.v2.siweb.es/uploaded_thumb_big/03306675df6bb004f83953b4f8ef82f7/copia_de_fotos_el_mundo1.jpg", alt: "Sala principal" },
  { src: "https://media.v2.siweb.es/uploaded_thumb_big/03306675df6bb004f83953b4f8ef82f7/photo1634756330.jpeg", alt: "Placa conmemorativa" },
  { src: "https://media.v2.siweb.es/uploaded_thumb_big/03306675df6bb004f83953b4f8ef82f7/reverso060.jpg", alt: "Retrato maestro" },
  { src: "https://media.v2.siweb.es/uploaded_thumb_big/03306675df6bb004f83953b4f8ef82f7/02112012_shotokan_31_1.jpg", alt: "Cuadros del dojo" },
];
---

<Layout title={title} description={description}>
  <main class="bg-[#0A192F] text-white min-h-screen">
    <!-- Título -->
    <section class="relative overflow-hidden border-b border-white/10">
      <div class="container mx-auto px-4 py-16 md:py-24 text-center">
        <p class="mb-3 text-white/80">Shotokan</p>
        <h1 class="mt-1 text-3xl md:text-5xl font-bold">Instalaciones</h1>
        <p class="mt-4 text-white/70 text-sm md:text-base">
          Conoce nuestros espacios de entrenamiento, cuidados con detalle para tu comodidad y seguridad.
        </p>
      </div>
    </section>

    <!-- Galería -->
    <section class="container mx-auto px-4 py-10 md:py-16">
      <h2 class="sr-only">Galería de instalaciones</h2>
      <div class="grid gap-6 md:grid-cols-[1.2fr,0.8fr]">
        <!-- Imagen destacada a la izquierda -->
        <div class="h-full">
          <img src={photos[0].src} alt={photos[0].alt} class="w-full h-full object-cover rounded-lg" />
        </div>
        <!-- Mosaico a la derecha -->
        <div class="grid gap-6">
          <div class="grid grid-cols-2 gap-6">
            {photos.slice(1, 3).map((p) => (
              <div class="aspect-[4/3]">
                <img src={p.src} alt={p.alt} class="w-full h-full object-cover rounded-lg {p.alt.includes('Retrato') ? 'object-top' : ''}" />
              </div>
            ))}
          </div>
          <div class="grid grid-cols-2 gap-6">
            {photos.slice(3, 5).map((p) => (
              <div class="aspect-[4/3]">
                <img src={p.src} alt={p.alt} class="w-full h-full object-cover rounded-lg" />
              </div>
            ))}
          </div>
        </div>
      </div>
      <p class="mt-6 text-xs text-white/60">
        Referencia: <a href="https://shotokanluismendez.com/shotokan/instalaciones" class="underline hover:text-white">Instalaciones (sitio oficial)</a>.
      </p>
    </section>
  </main>
</Layout>
