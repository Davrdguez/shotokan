---
import "../styles/global.css";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";

// src/layouts/BaseLayout.astro
const {
  title = "Shotokan",
  description = "Gimnasio de artes marciales en Valladolid",
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/SHOTOKAN.png" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&family=Montserrat:wght@700;800;900&display=swap"
      rel="stylesheet"
    />

    <!-- Script inicial para aplicar tema antes del render -->
    <script is:inline>
      (() => {
        const storageKey = "theme";
        const root = document.documentElement;
        try {
          const stored = localStorage.getItem(storageKey);
          const preferDark = window.matchMedia &&
            window.matchMedia("(prefers-color-scheme: dark)").matches;
          const theme = stored || (preferDark ? "dark" : "light");
          if (theme === "dark") {
            root.classList.add("dark");
          } else {
            root.classList.remove("dark");
          }
        } catch (e) {
          // Si algo falla, no rompemos el render
        }
      })();
    </script>
  </head>
  <body
    class="font-sans antialiased bg-bg text-fg dark:bg-slate-950 dark:text-slate-100"
  >
    <Header />
    <slot />
    <Footer />
  </body>
</html>
