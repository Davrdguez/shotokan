<section id="classes" class="py-20 border-t border-border/60 bg-bg">
  <div class="container space-y-20">
    <!-- Infantiles -->
    <div>
      <h2 class="text-3xl md:text-4xl font-extrabold text-fg mb-12 text-center">
        Actividades <span class="text-red-500">Infantiles</span>
      </h2>
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        {infantiles.map((cls) => (
          <div class="rounded-xl overflow-hidden bg-surface border border-border/60 hover:shadow-xl transition group">
            <div class="overflow-hidden">
              <img
                src={cls.img}
                alt={cls.title}
                class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-500"
                loading="lazy"
                decoding="async"
              />
            </div>
            <div class="p-5">
              <h3 class="text-lg font-semibold text-red-500">{cls.title}</h3>
              <div class="mt-3 flex flex-col gap-1">
                {cls.schedule.map((s) => (
                  <span class="inline-block text-xs px-2 py-1 rounded bg-border/30 text-fg/80 w-fit">
                    {s}
                  </span>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Adultos -->
    <div>
      <h2 class="text-3xl md:text-4xl font-extrabold text-fg mb-12 text-center">
        Actividades <span class="text-red-500">Adultos</span>
      </h2>
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
